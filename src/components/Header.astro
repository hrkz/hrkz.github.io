	<label for="rail-btn" class="overlay"></label>
</header>

<style>
	/* header */
	:global(header) {
		position: fixed;
		top: 0;
		left: 0;
		right: 0;
		display: flex;
		height: 64px;
		padding-inline: 16px;
		align-items: center;
		background-color: var(--color-surface);
		box-shadow: 0 2px 5px 0 rgba(0,0,0,.15),0 2px 5px 0 rgba(0,0,0,.25);
		z-index: 10;

		input {
			display: none;
		}

		.menu-icon {
			cursor: pointer;
			align-items: center;
			fill: var(--color-inactive);

			&:hover {
				fill: var(--color-text);
			}
		}

		.menu-btn {
			display: none;
			margin-right: 24px;
		}

		a {
			display: flex;
			padding-block: 8px;
			font-size: 0.75rem;
			color: var(--color-inactive);
			fill: var(--color-inactive);
		}

		.title {
			font-size: 1.2rem;
		}

		.active-page {
			color: var(--color-text);
		}

		/* menu bar (desktop) */
		.menu {
			display: flex;
			align-items: end;
			margin-left: 50px;

			.active-page {
				border-bottom: 2px solid var(--color-accent);
			}

			a {
				margin-top: 5px;
				padding-inline: 24px;

				&:hover {
					background-color: var(--color-hover);
				}
			}
		}

		.actions {
			display: flex;
			align-items: center;
			gap: 24px;
			margin-left: auto;
		}

		/* rail menu (tablet and mobile) */
		.rail {
			position: fixed;
			top: 0;
			left: 0;
			display: flex;
			flex-direction: column;
			width: 350px;
			height: 100%;
			padding-top: 64px;
			background-color: var(--color-surface);
			transform: translateX(-100%);
			transition: transform 0.3s ease;
			z-index: 100;

			a:hover, 
			.active-page {
				background-color: var(--color-hover);
			}

			a {
				align-items: center;
				margin-inline: 16px;
				border-start-end-radius: 100px;
				border-end-end-radius: 100px;
			}
		}

		/* opened rail */
		#rail-btn:checked ~ .rail {
			transform: translateX(0);
		}

		#rail-btn:checked ~ .overlay {
			opacity: 0.5;
			pointer-events: auto;
		}

		#rail-btn:checked ~ .close-btn {
			display: flex;
			z-index: 110;
		}

		.overlay {
			position: fixed;
			inset: 0;
			background: var(--color-inactive);
			opacity: 0;
			pointer-events: none;
			transition: opacity 0.3s ease;
			z-index: 99;
		}

		@media (max-width: 1024px) {
			.menu-btn {
				display: flex;
			}

			.menu, 
			.close-btn {
				display: none;
			}
		}
	}
</style>